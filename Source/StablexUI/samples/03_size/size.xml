<?xml version="1.0" encoding="UTF-8"?>

<Widget w="800" h="600">

    <!-- Buttons -->
    <VBox w="800" autoHeight="true" childPadding="10" padding="10">
        <Button w="300" skin:Paint-border="1" skin:Paint-color="0x00FF00" text="'Click here to set \'child.w = 50\''" autoHeight="true" on-click=" #child.w = 50; "/>
        <Button w="300" skin:Paint-border="1" skin:Paint-color="0x00FF00" text="'Click here to set \'child.widthPt = 50\''" autoHeight="true" on-click=" #child.widthPt = 50; " />
        <Button w="300" skin:Paint-border="1" skin:Paint-color="0x00FF00" text="'Click here to set \'child.h = 50\''" autoHeight="true" on-click=" #child.h = 50; "/>
        <Button w="300" skin:Paint-border="1" skin:Paint-color="0x00FF00" text="'Click here to set \'child.heightPt = 50\''" autoHeight="true" on-click=" #child.heightPt = 50; " />
    </VBox>

    <!-- parent -->
    <Widget bottom="10" left="50" h="400" w="700" skin:Paint-border="1" skin:Paint-color="0x005500">
        <!-- child -->
        <Widget left="50" top="50" id="'child'" w="100" h="100" skin:Paint-border="1" skin:Paint-color="0x550000" />
    </Widget>
</Widget>