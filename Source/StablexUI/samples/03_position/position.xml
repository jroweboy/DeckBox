<?xml version="1.0" encoding="UTF-8"?>

<Widget w="800" h="600">

    <!-- Buttons -->
    <VBox w="800" childPadding="10" padding="10">
        <Button w="300" skin:Paint-border="1" skin:Paint-color="0xaaaaaa" text="'Click here to set \'child.left = 30\''" autoHeight="true" on-click=" #child.left = 30; "/>
        <Button w="300" skin:Paint-border="1" skin:Paint-color="0xaaaaaa" text="'Click here to set \'child.leftPt = 30\''" autoHeight="true" on-click=" #child.leftPt = 30; " />
        <Button w="300" skin:Paint-border="1" skin:Paint-color="0xaaaaaa" text="'Click here to set \'child.right = 30\''" autoHeight="true" on-click=" #child.right = 30; " />
        <Button w="300" skin:Paint-border="1" skin:Paint-color="0xaaaaaa" text="'Click here to set \'child.rightPt = 30\''" autoHeight="true" on-click=" #child.rightPt = 30; " />
        <Button w="300" skin:Paint-border="1" skin:Paint-color="0xaaaaaa" text="'Click here to set \'child.top = 30\''" autoHeight="true" on-click=" #child.top = 30; " />
        <Button w="300" skin:Paint-border="1" skin:Paint-color="0xaaaaaa" text="'Click here to set \'child.topPt = 30\''" autoHeight="true" on-click=" #child.topPt = 30; " />
        <Button w="300" skin:Paint-border="1" skin:Paint-color="0xaaaaaa" text="'Click here to set \'child.bottom = 30\''" autoHeight="true" on-click=" #child.bottom = 30; " />
        <Button w="300" skin:Paint-border="1" skin:Paint-color="0xaaaaaa" text="'Click here to set \'child.bottomPt = 30\''" autoHeight="true" on-click=" #child.bottomPt = 30; " />
    </VBox>

    <!-- parent -->
    <Widget bottom="10" left="50" h="300" w="700" skin:Paint-border="1" skin:Paint-color="0x005500">
        <!-- child -->
        <Widget leftPt="50" topPt="50" id="'child'" w="50" h="50" skin:Paint-border="1" skin:Paint-color="0x550000" />
    </Widget>
</Widget>